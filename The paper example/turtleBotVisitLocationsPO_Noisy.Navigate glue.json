{
    "PlpMain": {
        "Project": "turtleBotVisitLocationsPO_Noisy",
        "Name": "navigate",
        "Type": "Glue",
        "Version": 1.0
    },
    "GlueFramework": "ROS", 
    "ModuleResponse": {
        "ResponseRules": [
            {
                "Response": "eSuccess",
                "ConditionCodeWithLocalVariables": "skillSuccess and planSuccess"
            },
            {
                "Response": "eFailed",
                "ConditionCodeWithLocalVariables": "True"
            }
        ]
    },
    "ModuleActivation": {
        "RosService": {
            "ImportCode": [
                {
                    "From": "geometry_msgs.msg",
                    "Import": ["Point"]
                },
                {
                    "From": "simple_navigation_goals.srv",
                    "Import": ["navigate","navigateResponse"]
                }],
            "ServicePath": "/navigate_to_point",
            "ServiceName": "navigate",
            "ServiceParameters": [
                { "ServiceFieldName": "goal",
                   "AssignServiceFieldCode": "Point(x= nav_to_x +nav_to_y, y= nav_to_y, z= nav_to_z)"}
            ]
        }
    },
    "LocalVariablesInitialization": [
        {
            "LocalVariableName": "skillSuccess",
            "FromROSServiceResponse": true,
            "AssignmentCode": "navigateSuccess=__input.success",
            "ImportCode": [
                {
                    "From": "std_msgs.msg",
                    "Import": [
                        "Bool"
                    ]
                }
            ]
        },
        {
            "LocalVariableName": "planSuccess",
            "RosTopicPath": "/navigation/planner_output",
            "VariableType": "bool",
            "InitialValue": "False",
            "TopicMessageType": "String",
            "ImportCode": [
                {
                    "From": "std_msgs.msg",
                    "Import": [
                        "String"
                    ]
                }
            ],
            "AssignmentCode": "if planSuccess == True:\n\treturn True\nelse:\n\treturn __input.data.find('success') > -1"
        },
        {
            "InputLocalVariable": "nav_to_x",
            "FromGlobalVariable": "oDesiredLocation.x"
        },
        {
            "InputLocalVariable": "nav_to_y",
            "FromGlobalVariable": "oDesiredLocation.y"
        },
        {
            "InputLocalVariable": "nav_to_z",
            "FromGlobalVariable": "oDesiredLocation.z"
        }
    ]
}